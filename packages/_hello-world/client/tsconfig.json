{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["@types/*"],
      "@src/*": ["src/*"],
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": [],
    "lib": [
      "DOM",
      "ES2020",
      "ESNext",
    ],
    "sourceMap": true,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
  ],
  "files": [],
}
